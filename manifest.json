{
  "manifest_version": 3,
  "name": "Simple Prompt Manager",
  "version": "0.0.1",
  "description": "轻量级AI提示词管理工具，支持分类标签、搜索筛选、导入导出功能，玻璃拟态界面设计",
  "author": "Daotin",
  "homepage_url": "https://github.com/Daotin/simple-prompt-manager",
  "permissions": ["storage"],
  "host_permissions": ["https://api.github.com/*", "https://gist.githubusercontent.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "提示词管理器"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "minimum_edge_version": "88"
}
